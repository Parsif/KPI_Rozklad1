<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginBottom="30dp">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1."
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/lesson_count"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/lesson_count"
            android:layout_alignBottom="@id/lesson_count"
            android:layout_marginStart="5dp"
            tools:text="Programming"
            android:textSize="16sp"
            android:id="@+id/lesson_name"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="8:00 - 9:00"
            android:layout_below="@id/lesson_name"
            android:layout_alignStart="@id/lesson_name"
            android:id="@+id/lesson_time"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Lecture"
            android:layout_below="@id/lesson_time"
            android:layout_alignStart="@id/lesson_name"
            android:id="@+id/lesson_type"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Location"
            android:id="@+id/lesson_location"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="70dp"
            android:textSize="16sp"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lesson_teacher"
            tools:text="Lisovichenko"
            android:layout_alignStart="@id/lesson_location"
            android:layout_below="@id/lesson_location"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            />

</RelativeLayout>